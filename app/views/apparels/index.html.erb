<%# CAROUSEL %>

<div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag image_url('pic1.jpg'), class: "d-block w-100", height: "680", width: "1440" %>
    </div>
    <div class="carousel-item">
      <%= image_tag image_url('pic2.jpg'), class: "d-block w-100", height: "680", width: "1440" %>
    </div>
    <div class="carousel-item">
      <%= image_tag image_url('pic3.jpg'), class: "d-block w-100", height: "680", width: "1440" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<%# ITEMS %>

<div class="container">
  <h4 class="text-center">
    Official merchandise by influencers, celebrities and independent artists
  </h4>

  <div class="row">
    <% @apparels.each do |apparel| %>
      <div class="col-xs-12 col-md-4 col-sm-2">
        <%= link_to apparel do %>
          <div class="card border-light mb-3" style="width: 18rem;">
            <%= image_tag apparel.image_url(:thumb), class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title text-center">
                <%= apparel.title %>
                <br>
                <%= number_to_currency(apparel.price) %>
              </h5>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
