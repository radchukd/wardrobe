<div id="wrapper">
  <h1 class="font-weight-bold">
    <%= @apparel.title %>
  </h1>

  <div class="row">
    <div class="col-sm-6">
      <%= image_tag(@apparel.image_url(:thumb)) %>
    </div>

    <div class="col-sm-6">
      <div class="list-group-flush">
        <li class="list-group-item">
          <%= number_to_currency(@apparel.price) %>
        </li>
        <li class="list-group-item">
          <%= @apparel.gender %>
        </li>
        <li class="list-group-item">
          <%= @apparel.description %>
        </li>
      </div>
    </div> 
  </div>

  <% if apparel_author(@apparel) %>
    <%= link_to 'Edit', edit_apparel_path(@apparel) %> |
  <% end %>

</div>