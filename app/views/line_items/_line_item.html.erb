  <tbody>
    <tr>
      <td data-th="Product">
        <div class="row">
          <div class="col-sm-2 hidden-xs"><%= image_tag(line_item.apparel.image_url(:line_item), class: "img-responsive") %></div>
          <div class="col-sm-10">
            <h4 class="nomargin">
              <%= link_to line_item.apparel do %>
                <%= line_item.apparel.title %>
              <% end %>
            </h4>
            <%= truncate(line_item.apparel.description, length: 140) %>
          </div>
        </div>
      </td>
      <td data-th="Price">
        <%= line_item.apparel.price %>
      </td>
      <td data-th="Quantity">
        <%= line_item.quantity %>
      </td>
      <td data-th="Subtotal" class="text-center">
        <%= line_item.total_price %>
      </td>
      <td class="actions">
        <%= link_to line_item, method: :delete, data: { confirm: "Are you sure? " }, class: "btn btn-danger btn-sm" do %>
          Delete
          <i class="fa fa-trash-o"></i>
        <% end %>      
      </td>
    </tr>
  </tbody>





